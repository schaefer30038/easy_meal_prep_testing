<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="NormalButton" parent="Theme.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:buttonStyle">@drawable/button</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="TitleText" parent="Theme.AppCompat">
        <item name="android:textColor">@color/lightCream</item>
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:textSize">34sp</item>
    </style>
    <style name="BodyText" parent="Theme.AppCompat">
        <item name='android:textColor'>@color/lightCream</item>
        <item name='fontFamily'>sans-serif</item>
        <item name='android:textSize'>20sp</item>
        <item name='android:layout_margin'>20sp</item>
    </style>
    <style name="FillInfo" parent="Theme.AppCompat">
        <item name='android:backgroundTint'>@color/white</item>
    </style>
    <style name="SmallButton" parent="Theme.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/small_button</item>
        <item name="android:buttonStyle">@drawable/small_button</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="Widget.Button.Toggle" parent="android:Widget">
        <item name="android:background">@drawable/ic_toggle_bg</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>

    <style name="toggleButton"  parent="android:Theme.Black">
        <item name="android:buttonStyleToggle">@style/Widget.Button.Toggle</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
    </style>

    <style name="TitleDesc" parent="Theme.AppCompat">
        <item name='android:textColor'>@color/lightCream</item>
        <item name='fontFamily'>sans-serif-light</item>
        <item name='android:textSize'>20sp</item>
        <item name='android:paddingTop'>30sp</item>
    </style>

    <style name="FillDesc" parent="Theme.AppCompat">
        <item name='android:backgroundTint'>@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>